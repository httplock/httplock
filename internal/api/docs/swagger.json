{
    "swagger": "2.0",
    "info": {
        "description": "HTTP reproducible proxy server.",
        "title": "httplock API",
        "contact": {
            "url": "https://github.com/httplock/httplock"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "0.1"
    },
    "paths": {
        "/api/ca": {
            "get": {
                "description": "returns the public CA in PEM format",
                "produces": [
                    "application/text"
                ],
                "summary": "Get CA",
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/root/{id}/export": {
            "get": {
                "description": "Exports a hash, returning a tar+gz",
                "produces": [
                    "application/x-gtar"
                ],
                "summary": "Root export",
                "parameters": [
                    {
                        "type": "string",
                        "description": "hash",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/root/{id}/import": {
            "put": {
                "description": "Imports a root hash from a tar+gz",
                "consumes": [
                    "application/x-gtar"
                ],
                "summary": "Root import",
                "parameters": [
                    {
                        "type": "string",
                        "description": "hash",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/token": {
            "post": {
                "description": "returns a new uuid for recording a session",
                "produces": [
                    "application/json"
                ],
                "summary": "Token create",
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/token/{id}": {
            "delete": {
                "description": "returns a new uuid for recording a session",
                "produces": [
                    "application/json"
                ],
                "summary": "Token delete",
                "parameters": [
                    {
                        "type": "string",
                        "description": "uuid",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Accepted"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        },
        "/api/token/{id}/save": {
            "post": {
                "description": "Saves a uuid token, returning an immutable hash",
                "produces": [
                    "application/json"
                ],
                "summary": "Token save",
                "parameters": [
                    {
                        "type": "string",
                        "description": "uuid",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "500": {
                        "description": "Internal Server Error"
                    }
                }
            }
        }
    }
}